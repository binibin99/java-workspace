package quiz;

public class B06_ForQuiz1 {

	/*
	 * 1. 1000부터 2000사이의 8의 배수를 모두 출력해보세요.
	 * 
	 * 2. 100부터 300까지의 총합을 구해보세요
	 * 
	 * 3. 1000부터 2000까지의 10의 배수를 한 줄에 5개씩 출력해보세요
	 * 
	 */

	public static void main(String[] args) {

		// A between B : A와 B를 모두 포함한다
		for (int i = 1000; i <= 2000; ++i) {
			// 8의 배수만 출력문을 만날 수 있다
			if (i % 8 == 0) {
				System.out.println(i);
			}
			System.out.println("반복문이 끝난 후의 i 값 : " + i);

			int total = 0;

			// 100부터 300까지의 총합을 구해보세요
			for (int b = 100; b <= 300; ++b) {
				total += b;
				System.out.print(b);
			}
			System.out.println("다 더해진 결과: " + total);
			
			int count = 0;
			for (int c = 1000; c <= 2000; ++c) {
				if (c % 10 == 0) {
					System.out.print(c);
					++count;
				}

			}
		}
	}
}
